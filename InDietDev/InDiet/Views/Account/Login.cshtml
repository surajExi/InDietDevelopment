@model InDiet.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<SCRIPT type="text/javascript">

    window.history.forward();
    function noBack() {
        window.history.forward();
    }
</SCRIPT>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="LoginBody" onload="noBack();" onpageshow="if (event.persisted) noBack();">
        <div class="container">
            <div class="row" style="padding-left:20em; padding-right:20em;">
                <div class="LoginService">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <div>
                                <h6 class="logo-name sm8"><i class='fa fa-3x fa-heartbeat'></i></h6>
                            </div>
                            <h3>InDiet</h3>
                            <p>
                                Your Fitness Heaven.
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <div class="row">
                                <form class="" role="form" action="#">
                                    @Html.ValidationSummary(true)
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "Login-form-control", @placeholder = "Username" })
                                            @Html.ValidationMessageFor(m => m.UserName, String.Empty, new { @style = "color:#e80c4d;!important" })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "Login-form-control", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @style = "color:#e80c4d;!important" })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary block full-width m-b fill-AAE-green">
                                                <a class="anchrBtnSubmit" title="Submit">Log in <i class="fa fa-paper-plane"></i></a>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <footer id="D-Footer">
            <div class="container">
                <div class="row">
                    <div class="row copyright">
                        <div class="col-md-12 text-left">
                            <p>
                                <small class="block">&copy; 2017 All Rights Reserved.</small>
                            </p>
                            <p>
                                <ul class="meetingFooterlinks">
                                    <li class="noLeftMargin"><a href="#" class="right-border">Home</a></li>
                                    <li><a href="#" class="right-border">Terms and Conditions</a></li>
                                    <li><a href="#">Privacy Policy</a></li>
                                </ul>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
}

